---
dependency:
  name: galaxy
  options:
    role-file: requirements.yml
driver:
  name: docker
lint:
  name: yamllint
platforms:
  - name: {{ role_name }}-alpine-edge
    image: alpine:edge
    command: sh -c "while true ; do sleep 1 ; done"
  - name: {{ role_name }}-alpine-latest
    image: alpine:latest
    command: sh -c "while true ; do sleep 1 ; done"
  - name: {{ role_name }}-archlinux
    image: base/archlinux
  - name: {{ role_name }}-centos-6
    image: centos:6
  - name: {{ role_name }}-centos-latest
    image: centos:latest
  - name: {{ role_name }}-debian-latest
    image: debian:latest
  - name: {{ role_name }}-debian-stable
    image: debian:stable
  - name: {{ role_name }}-debian-unstable
    image: debian:unstable
  - name: {{ role_name }}-fedora-latest
    image: fedora:latest
  - name: {{ role_name }}-fedora-rawhide
    image: fedora:rawhide
  - name: {{ role_name }}-opensuse-leap
    image: opensuse:leap
  - name: {{ role_name }}-opensuse-tumbleweed
    image: opensuse:tumbleweed
  - name: {{ role_name }}-ubuntu-artful
    image: ubuntu:artful
  - name: {{ role_name }}-ubuntu-devel
    image: ubuntu:devel
provisioner:
  name: ansible
  inventory:
    group_vars:
      all:
        {{ role_name }}_ignore_docker: no
    host_vars:
      {{ role_name }}-fedora-rawhide:
        ansible_python_interpreter: /usr/bin/python3
  lint:
    name: ansible-lint
scenario:
  name: default
verifier:
  name: goss
  lint:
    name: yamllint
