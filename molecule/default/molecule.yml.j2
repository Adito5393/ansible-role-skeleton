---
dependency:
  name: galaxy
  options:
    role-file: requirements.yml
lint:
  name: yamllint
driver:
  name: docker
platforms:
  - name: {{ role_name | replace("_", "-") }}-alpine-edge
    image: alpine:edge
    pre_build_image: yes
    command: sh -c "while true ; do sleep 1 ; done"
  - name: {{ role_name | replace("_", "-") }}-alpine-latest
    image: alpine:latest
    pre_build_image: yes
    command: sh -c "while true ; do sleep 1 ; done"
  - name: {{ role_name | replace("_", "-") }}-archlinux
    image: archlinux/base
    pre_build_image: yes
  - name: {{ role_name | replace("_", "-") }}-centos-6
    image: centos:6
    pre_build_image: yes
  - name: {{ role_name | replace("_", "-") }}-centos-latest
    image: centos:latest
    pre_build_image: yes
  - name: {{ role_name | replace("_", "-") }}-debian-stable
    image: debian:stable
    pre_build_image: yes
  - name: {{ role_name | replace("_", "-") }}-debian-unstable
    image: debian:unstable
    pre_build_image: yes
  - name: {{ role_name | replace("_", "-") }}-fedora-latest
    image: fedora:latest
    pre_build_image: yes
  - name: {{ role_name | replace("_", "-") }}-fedora-rawhide
    image: fedora:rawhide
    pre_build_image: yes
  - name: {{ role_name | replace("_", "-") }}-opensuse-leap
    image: opensuse/leap
    pre_build_image: yes
  - name: {{ role_name | replace("_", "-") }}-ubuntu-latest
    image: ubuntu:latest
    pre_build_image: yes
  - name: {{ role_name | replace("_", "-") }}-ubuntu-rolling
    image: ubuntu:rolling
    pre_build_image: yes
  - name: {{ role_name | replace("_", "-") }}-ubuntu-devel
    image: ubuntu:devel
    pre_build_image: yes
provisioner:
  name: ansible
  playbooks:
    prepare: ../resources/prepare.yml
    converge: ../resources/playbook.yml
  lint:
    name: ansible-lint
  inventory:
    host_vars:
      auditd-fedora-latest:
        ansible_python_interpreter: /usr/bin/python3
      auditd-fedora-rawhide:
        ansible_python_interpreter: /usr/bin/python3
scenario:
  name: default
