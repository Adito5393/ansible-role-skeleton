---
dependency:
  name: galaxy
  options:
    role-file: requirements.yml
driver:
  name: vagrant
  provider:
    name: virtualbox
lint:
  name: yamllint
platforms:
  - name: {{ role_name | replace("_", "-") }}-debian
    box: debian/stretch64
  - name: {{ role_name | replace("_", "-") }}-fedora
    box: fedora/29-cloud-base
provisioner:
  name: ansible
  lint:
    name: ansible-lint
scenario:
  name: vagrant
verifier:
  name: goss
  lint:
    name: yamllint
