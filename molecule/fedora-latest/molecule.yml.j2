---
dependency:
  name: galaxy
  options:
    role-file: requirements.yml
driver:
  name: docker
lint:
  name: yamllint
platforms:
  - name: {{ role_name }}-fedora-latest
    image: fedora:latest
provisioner:
  name: ansible
  inventory:
    group_vars:
      all:
        {{ role_name }}_ignore_docker: no
  lint:
    name: ansible-lint
scenario:
  name: fedora-latest
verifier:
  name: goss
  lint:
    name: yamllint
