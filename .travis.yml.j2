---
language: python

python:
  - "3.7"

services:
  - docker

env:
  global:
    - namespace="robertdebock/"
  matrix:
    - image="docker-alpine-openrc"
    - image="docker-alpine-openrc" tag="edge"
    - namespace="archlinux/" image="base"
    - image="docker-centos-systemd" tag="7"
    - image="docker-centos-systemd"
    - image="docker-debian-systemd"
    - image="docker-debian-systemd" tag="stable"
    - image="docker-debian-systemd" tag="unstable"
    - image="docker-fedora-systemd"
    - image="docker-fedora-systemd" tag="rawhide"
    - namespace="opensuse" image="leap"
    - image="docker-ubuntu-systemd"
    - image="docker-ubuntu-systemd" tag="devel"
    - image="docker-ubuntu-systemd" tag="rolling"

matrix:
  allow_failures:
    - env: namespace="robertdebock/" image="alpine" tag="edge"
    - env: namespace="robertdebock/" image="docker-debian-systemd" tag="unstable"
    - env: namespace="robertdebock/" image="docker-fedora-systemd" tag="rawhide"
    - env: namespace="robertdebock/" image="docker-ubuntu-systemd" tag="rolling"
    - env: namespace="robertdebock/" image="docker-ubuntu-systemd" tag="devel"

cache:
  - pip

install:
  - pip install --upgrade pip
  - pip install tox

script:
  - tox --parallel all

notifications:
  webhooks: https://galaxy.ansible.com/api/v1/notifications/
  slack:
    secure: "# out of `travis encrypt robertdebock:TOKEN-FROM-SLACK`"
  email: false
