---
# tasks file for {{ role_name }}
- name: load default variables
  include_vars:
    file: default.yml

- name: load os-specific variables
  include_vars: {% raw -%}"{{ item }}"{%- endraw %}
  with_first_found:
    - {% raw -%}"{{ ansible_distribution }}-{{ ansible_distribution_major_version }}.yml"{%- endraw %}
    - {% raw -%}"{{ ansible_distribution }}.yml"{%- endraw %}
    - default.yml

- name: install software
  package:
    name: {% raw -%}"{{ item }}"{%- endraw %}
    state: present
  with_items:
    - "{%raw -%}{{{%- endraw %} {{ role_name }}_packages {%raw -%}}}{%- endraw %}"

- name: configure software
  template:
    src: "{%raw -%}{{{%- endraw %} {{ role_name }}_config_file {%raw -%}}}{%- endraw %}".j2
    dest: "{%raw -%}{{{%- endraw %} {{ role_name }}_config_directory {%raw -%}}}{%- endraw %}"/"{%raw -%}{{{%- endraw %} {{ role_name }}_config_file {%raw -%}}}{%- endraw %}"
  notify:
    - restart software

- name: start and enable software
  service:
    name: "{%raw -%}{{{%- endraw %} {{ role_name }}_service {%raw -%}}}{%- endraw %}"
    state: started
    enabled: yes
  when:
    - ansible_virtualization_type != "docker"
